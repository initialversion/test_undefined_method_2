<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

      <dt>First name</dt>
      <dd><%= @user.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @user.last_name %></dd>

      <dt>Username</dt>
      <dd><%= @user.username %></dd>

      <dt>Avatar</dt>
      <dd><img src="//<%= @user.avatar %>" class="img-responsive"></dd>

      <dt>Current location</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A User has many bookmarks -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Bookmarks
      </li>

      <% @user.bookmarks.each do |bookmark| %>
        <li class="list-group-item">
          <a href="/bookmarks/<%= bookmark.id %>">
            <%= bookmark.location_id %>
          </a>
          <a href="/bookmarks/<%= bookmark.id %>" class="btn btn-primary">
            Show
          </a>
          <%if current_user == bookmark.user %>
            <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn btn-warning">
              Edit
            </a>
            <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow">
              Delete
            </a>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

